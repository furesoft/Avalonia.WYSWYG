<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://furesoft.de/schemas/wyswyg">
  <Style Selector="controls|WidgetDisplay">
    <Setter Property="Template">
      <ControlTemplate>
        <ItemsControl ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{TemplateBinding Items}"
                      VerticalAlignment="Top">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <StackPanel Orientation="Vertical" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>

          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <controls:EditableContainer Content="{Binding}"
                                 DeleteCommand="{Binding $parent[controls:WidgetDisplay].DeleteCommand}"
                                 CommandParameter="{Binding}"
                                 IsEditMode="{Binding  IsEditMode, Mode=TwoWay}">
                <controls:EditableContainer.EditModeContent>
                  <ContentPresenter Content="{Binding EditView, Mode=TwoWay}" />
                </controls:EditableContainer.EditModeContent>
              </controls:EditableContainer>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>