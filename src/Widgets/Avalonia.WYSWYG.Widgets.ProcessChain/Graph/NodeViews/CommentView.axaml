<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" MinWidth="150" MinHeight="130"
             x:Class="Avalonia.WYSWYG.Widgets.ProcessChain.Graph.NodeViews.CommentView">
  <Grid>
    <Rectangle Classes="node" Fill="#008000" Stroke="#00FF00" />
    <TextBlock Margin="5" Text="{Binding Comment, Mode=TwoWay}" Foreground="{DynamicResource NodeForegroundBrush}"
               TextWrapping="Wrap" />
  </Grid>
</UserControl>